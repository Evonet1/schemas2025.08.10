  "$comment": "This schema may be used for any physical length value",
  "fileVersion": "1.0",
  "fileDate":"2025-09-26",  
  "schema": {
    "oneOf": [
      {
        "type": "string",
        "pattern": "^([0-9]+(.[0-9]+)?)(in|ft|yds|mi|mm|cm|m|km)$"
      },
      {
        "type": "object",
        "properties": {
          "value": {"type": "number"},
          "units": {
            "type": "string",
            "enum": [
              "in",
              "ft",
              "yds",
              "mi",
              "mm",
              "cm",
              "m",
              "km"
            ]
          }
        },
        "required": ["value"]
      }
    ]
  }
}