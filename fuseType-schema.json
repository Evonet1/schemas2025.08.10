  "$comment": "Physical formats for fuses.  Each format has its own options for size.  As new formats are added, so a list of possible sizes should be added.",
  "fileVersion": "1.0",
  "fileDate":"2025-09-26",  
  "schema": {
    "oneOf": [
      {
        "type": "object",
        "properties": {
          "automotiveBlade": {
            "type": "object",
            "properties": {
              "size": {
                "type": "string",
                "enum": [
                  "standard",
                  "mini"
                ]
              }
            },
            "required": ["size"]
          }
        },
        "required": ["automotiveBlade"]
      },
      {
        "type": "object",
        "properties": {
          "cartridge": {"$ref": "mechanical-schema.json#/schema"}
        },
        "required": ["cartridge"]
      },
      {
        "type": "object",
        "properties": {
          "flushSquareBody": {"$ref": "mechanical-schema.json#/schema"}
        },
        "required": ["flushSquareBody"]
      },
      {
        "type": "object",
        "properties": {
          "SQB": {
            "type": "object",
            "properties": {
              "size": {"type": "string"}
            },
            "required": ["size"]
          }
        },
        "required": ["SQB"]
      },
      {
        "type": "string",
        "const": "L25S"
      },
      {
        "type": "string",
        "const": "L50S"
      }
    ]
  }
}